@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="container">
    <h1>Bildirimler</h1>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Bildirim</th>
            <th>Tarih</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.NotificationId</td>
                <td>@x.NotificationDetails</td>
                <td>@(((DateTime)x.NotificationDate).ToString("dd-MMM-yyyy"))</td>
            </tr>
        }

    </table>
</div>



