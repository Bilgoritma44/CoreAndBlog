@using EntityLayer.Concrete
@model List<Blog>

    @foreach(var x in Model)
    {
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/Detail/@x.BlogId">
                <img src="@x.BlogImage" class="card-img-top img-fluid" alt="">

            </a>
        </div>

        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Blog/Detail/@x.BlogId">@x.BlogContent.Substring(0,x.BlogContent.Substring(0,30).LastIndexOf(" "))...</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @(((DateTime)x.BlogCreateDate).ToString("dd-MMM-yyyy"))
                </span>
            </div>
        </div>
        <br />

    </div>    }

