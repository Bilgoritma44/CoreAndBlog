@using EntityLayer.Concrete
@model List<Category> 
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<div class="container">

    <a href="/Category/Add/" class="btn btn-info">New Add Category</a>

    <table class="table table-striped" style="margin-top:10px">
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CategoryId</td>
                <td>@x.CategoryName</td>
                <td>@x.CategoryDescription</td>
                <td><a href="/Category/Delete/@x.CategoryId" class="btn btn-danger">Delete</a></td>
                <td><a href="/Category/Update/@x.CategoryId" class="btn btn-warning">Update</a></td>


            </tr>

        }
    </table>
</div>
